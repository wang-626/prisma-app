// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  age          Int?
  name         String
  email        String       @unique
  password     String?
  github_oauth String?
  loginToken   LoginToken[]

  @@index([id])
}

model LoginToken {
  id     String  @id @default(uuid())
  device String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@index([id])
}
